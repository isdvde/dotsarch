<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc" xmlns:xi="http://www.w3.org/2001/XInclude">

<!-- ######################################################################### -->
<!-- Global Config -->
<!-- ######################################################################### -->

	<resistance>
		<strength>200</strength>
		<screen_edge_strength>200</screen_edge_strength>
	</resistance>

	<focus>
		<focusNew>yes</focusNew>
		<followMouse>yes</followMouse>
		<focusLast>yes</focusLast>
		<underMouse>no</underMouse>
		<focusDelay>10</focusDelay>
		<!-- <raiseOnFocus>yes</raiseOnFocus> -->
	</focus>

	<placement>
		<policy>Smart</policy>
		<center>yes</center>
		<monitor>Mouse</monitor>
		<primaryMonitor>Mouse</primaryMonitor>
	</placement>

<!-- ######################################################################### -->
<!-- Theme Config -->
<!-- ######################################################################### -->

	<theme>
		<name>Onyx</name>
		<titleLayout/>

		<keepBorder>yes</keepBorder>
		<animateIconify>yes</animateIconify>

		<font place="ActiveWindow">
			<name>Sans</name> <size>8</size>
			<weight>Bold</weight> <slant>Normal</slant>
		</font>

		<font place="InactiveWindow">
			<name>sans</name> <size>8</size>
			<weight>bold</weight> <slant>normal</slant>
		</font>

		<font place="MenuHeader">
			<name>sans</name> <size>9</size>
			<weight>normal</weight> <slant>normal</slant>
		</font>

		<font place="MenuItem">
			<name>sans</name> <size>9</size>
			<weight>normal</weight> <slant>normal</slant>
		</font>

		<font place="ActiveOnScreenDisplay">
			<name>sans</name> <size>9</size>
			<weight>bold</weight> <slant>normal</slant>
		</font>

		<font place="InactiveOnScreenDisplay">
			<name>sans</name> <size>9</size>
			<weight>bold</weight> <slant>normal</slant>
		</font>
	</theme>

<!-- ######################################################################### -->
<!-- Desktops Config -->
<!-- ######################################################################### -->
	<desktops>
		<number>10</number>
		<firstdesk>1</firstdesk>
		<popupTime>0</popupTime>
	</desktops>

	<resize>
		<drawContents>yes</drawContents>
		<popupShow>Never</popupShow>
		<popupPosition>Center</popupPosition>
	</resize>

	<margins>
		<top>10</top>
		<bottom>38</bottom>
		<left>10</left>
		<right>10</right>
	</margins>

	<dock>
		<position>Bottom</position>
		<keepBorder>yes</keepBorder>
		<floatingX>0</floatingX>
		<floatingY>0</floatingY>
		<noStrut>no</noStrut>
		<stacking>Above</stacking>
		<direction>Horizontal</direction>
		<autoHide>no</autoHide>
		<hideDelay>300</hideDelay>
		<showDelay>300</showDelay>
		<moveButton>Middle</moveButton>
	</dock>

<!-- ######################################################################### -->
<!-- Keybind -->
<!-- ######################################################################### -->
	<keyboard>
		<chainQuitKey>C-g</chainQuitKey>

		<!-- ######################################################################### -->
		<!-- Desktop Keybind -->
		<!-- ######################################################################### -->

		<!-- <keybind key="C-A-Left"> <action name="GoToDesktop"> <to>left</to> <wrap>no</wrap> </action> </keybind> -->
		<!-- <keybind key="C-A-Right"> <action name="GoToDesktop"> <to>right</to> </action> </keybind> -->
		<!-- <keybind key="S-A-Left"> <action name="SendToDesktop"> <to>left</to> </action> </keybind> -->
		<!-- <keybind key="S-A-Right"> <action name="SendToDesktop"> <to>right</to> <wrap>no</wrap> </action> </keybind> -->

		<!-- Send windows to desktop -->
		<keybind key="W-S-1"> <action name="SendToDesktop"> <to>1</to> </action> </keybind>
		<keybind key="W-S-2"> <action name="SendToDesktop"> <to>2</to> </action> </keybind>
		<keybind key="W-S-3"> <action name="SendToDesktop"> <to>3</to> </action> </keybind>
		<keybind key="W-S-4"> <action name="SendToDesktop"> <to>4</to> </action> </keybind>
		<keybind key="W-S-5"> <action name="SendToDesktop"> <to>5</to> </action> </keybind>
		<keybind key="W-S-6"> <action name="SendToDesktop"> <to>6</to> </action> </keybind>
		<keybind key="W-S-7"> <action name="SendToDesktop"> <to>7</to> </action> </keybind>
		<keybind key="W-S-8"> <action name="SendToDesktop"> <to>8</to> </action> </keybind>
		<keybind key="W-S-9"> <action name="SendToDesktop"> <to>9</to> </action> </keybind>
		<keybind key="W-S-0"> <action name="SendToDesktop"> <to>10</to> </action> </keybind>

		<!-- Go to desktop -->
		<keybind key="W-1"> <action name="GoToDesktop"> <to>1</to> </action> </keybind>
		<keybind key="W-2"> <action name="GoToDesktop"> <to>2</to> </action> </keybind>
		<keybind key="W-3"> <action name="GoToDesktop"> <to>3</to> </action> </keybind>
		<keybind key="W-4"> <action name="GoToDesktop"> <to>4</to> </action> </keybind>
		<keybind key="W-5"> <action name="GoToDesktop"> <to>5</to> </action> </keybind>
		<keybind key="W-6"> <action name="GoToDesktop"> <to>6</to> </action> </keybind>
		<keybind key="W-7"> <action name="GoToDesktop"> <to>7</to> </action> </keybind>
		<keybind key="W-8"> <action name="GoToDesktop"> <to>8</to> </action> </keybind>
		<keybind key="W-9"> <action name="GoToDesktop"> <to>9</to> </action> </keybind>
		<keybind key="W-0"> <action name="GoToDesktop"> <to>10</to> </action> </keybind>

		<keybind key="W-d"> <action name="ToggleShowDesktop"/> </keybind>


		<!-- ######################################################################### -->
		<!-- Windows Keybind -->
		<!-- ######################################################################### -->

		<!-- Close Window -->
		<keybind key="W-S-q"> <action name="Close"/> </keybind>

		<!-- Show windows menu -->
		<keybind key="A-space"> <action name="ShowMenu"> <menu>client-menu</menu> </action> </keybind>
		
		<!-- Change windows with popup -->
		<keybind key="A-Tab"> <action name="NextWindow"> </action> </keybind>
		<keybind key="A-S-Tab"> <action name="PreviousWindow"> </action> </keybind>

		<!-- Change windows without popup -->
		<keybind key="W-Tab"> <action name="NextWindow"> <interactive>no</interactive> <linear>yes</linear> </action> </keybind>
		<keybind key="W-S-Tab"> <action name="PreviousWindow"> <interactive>no</interactive> <linear>yes</linear> </action> </keybind>

		<keybind key="W-Right"> <action name="NextWindow"> <interactive>no</interactive> <linear>yes</linear> </action> </keybind>
		<keybind key="W-Left"> <action name="PreviousWindow"> <interactive>no</interactive> <linear>yes</linear> </action> </keybind>

		<!-- Fullscreen -->
		<keybind key="W-space"> <action name="ToggleMaximizeFull"> </action> </keybind>

		<!-- Omnipresent -->
		<keybind key="W-C-0"> <action name="ToggleOmnipresent"> </action> </keybind>

		<!-- Minimize -->
		<keybind key="W-m"> <action name="Iconify"> </action> </keybind>


		<!-- ######################################################################### -->
		<!-- PseudoTiling Keybind -->
		<!-- ######################################################################### -->

		<!-- Center Semi Full -->
		<keybind key="W-S-space">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>center</x> <y>center</y>
				<width>90%</width>
				<height>90%</height>
			</action>
		</keybind>

		<!-- Vertical Left Half -->
		<keybind key="W-A-Left">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>0</x> <y>0</y>
				<width>50%</width>
				<height>100%</height>
			</action>
		</keybind>

		<!-- Vertical Right Half -->
		<keybind key="W-A-Right">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>-0</x> <y>0</y>
				<width>50%</width>
				<height>100%</height>
			</action>
		</keybind>

		<!-- horizontal Top Half -->
		<keybind key="W-A-Up">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>0</x> <y>0</y>
				<width>100%</width>
				<height>50%</height>
			</action>
		</keybind>

		<!-- horizontal Bottom Half -->
		<keybind key="W-A-Down">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>0</x> <y>-0</y>
				<width>100%</width>
				<height>50%</height>
			</action>
		</keybind>

		<!-- Right Top Corner -->
		<keybind key="W-C-Up">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>50%</x> <y>0</y>
				<width>50%</width>
				<height>50%</height>
			</action>
		</keybind>

		<!-- Right Bottom Corner -->
		<keybind key="W-C-Right">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>50%</x> <y>-0</y>
				<width>50%</width>
				<height>50%</height>
			</action>
		</keybind>

		<!-- Left Top Corner -->
		<keybind key="W-C-Left">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>0</x> <y>0</y>
				<width>50%</width>
				<height>50%</height>
			</action>
		</keybind>

		<!-- Left Bottom Corner -->
		 <keybind key="W-C-Down">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>0</x> <y>-0</y>
				<width>50%</width>
				<height>50%</height>
			</action>
		</keybind>

		<!-- Positions with keypad -->

		<!-- Center Semi Full -->
		<keybind key="W-KP_5">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>center</x> <y>center</y>
				<width>90%</width>
				<height>90%</height>
			</action>
		</keybind>

		<!-- Vertical Left Half -->
		<keybind key="W-KP_4">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>0</x> <y>0</y>
				<width>50%</width>
				<height>100%</height>
			</action>
		</keybind>

		<!-- Vertical Right Half -->
		<keybind key="W-KP_6">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>-0</x> <y>0</y>
				<width>50%</width>
				<height>100%</height>
			</action>
		</keybind>

		<!-- horizontal Top Half -->
		<keybind key="W-KP_8">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>0</x> <y>0</y>
				<width>100%</width>
				<height>50%</height>
			</action>
		</keybind>

		<!-- horizontal Bottom Half -->
		<keybind key="W-KP_2">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>0</x> <y>-0</y>
				<width>100%</width>
				<height>50%</height>
			</action>
		</keybind>

		<!-- Right Top Corner -->
		<keybind key="W-KP_9">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>50%</x> <y>0</y>
				<width>50%</width>
				<height>50%</height>
			</action>
		</keybind>

		<!-- Right Bottom Corner -->
		<keybind key="W-KP_3">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>50%</x> <y>-0</y>
				<width>50%</width>
				<height>50%</height>
			</action>
		</keybind>

		<!-- Left Top Corner -->
		<keybind key="W-KP_7">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>0</x> <y>0</y>
				<width>50%</width>
				<height>50%</height>
			</action>
		</keybind>

		<!-- Left Bottom Corner -->
		 <keybind key="W-KP_1">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>0</x> <y>-0</y>
				<width>50%</width>
				<height>50%</height>
			</action>
		</keybind>

		<!-- Center small -->
		<keybind key="W-S-KP_5">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>center</x> <y>center</y>
				<width>33%</width>
				<height>33%</height>
			</action>
		</keybind>

		<!-- Middle Left Third -->
		<keybind key="W-S-KP_4">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>0</x> <y>center</y>
				<width>33%</width>
				<height>33%</height>
			</action>
		</keybind>

		<!-- Middle Right Third -->
		<keybind key="W-S-KP_6">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>-0</x> <y>center</y>
				<width>33%</width>
				<height>33%</height>
			</action>
		</keybind>

		<!-- Top Middle third -->
		<keybind key="W-S-KP_8">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>center</x> <y>0</y>
				<width>33%</width>
				<height>33%</height>
			</action>
		</keybind>

		<!-- Bottom Middle third -->
		<keybind key="W-S-KP_2">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>center</x> <y>-0</y>
				<width>33%</width>
				<height>33%</height>
			</action>
		</keybind>

		<!-- Top Left Third -->
		<keybind key="W-S-KP_9">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>-0</x> <y>0</y>
				<width>33%</width>
				<height>33%</height>
			</action>
		</keybind>

		<!-- Bottom Right third -->
		<keybind key="W-S-KP_3">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>-0</x> <y>-0</y>
				<width>33%</width>
				<height>33%</height>
			</action>
		</keybind>

		<!-- Top Left Thiurd -->
		<keybind key="W-S-KP_7">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>0</x> <y>0</y>
				<width>33%</width>
				<height>33%</height>
			</action>
		</keybind>

		<!-- Bottom Left Third -->
		 <keybind key="W-S-KP_1">
			<action name="Unmaximize" />
			<action name="MoveResizeTo">
				<x>0</x> <y>-0</y>
				<width>33%</width>
				<height>33%</height>
			</action>
		</keybind>

		<!-- ######################################################################### -->
		<!-- Apss Keybind -->
		<!-- ######################################################################### -->

		<!-- Restart Openbox -->
		<keybind key="W-S-r"> <action name="Execute"> <command>openbox --restart</command> </action> </keybind>

		<!-- Exit Openbox -->
		<keybind key="W-S-e"> <action name="Execute"> <command>openbox --exit</command> </action> </keybind>

		<!-- Screenshots -->
		<keybind key="F10"> <action name="Execute"> <command>xfce4-screenshooter -f</command> </action> </keybind>
		<keybind key="C-F10"> <action name="Execute"> <command>xfce4-screenshooter -r</command> </action> </keybind>
		<keybind key="A-F10"> <action name="Execute"> <command>xfce4-screenshooter -w</command> </action> </keybind>

		<!-- Rofi Launcher -->
		<keybind key="W-r">
			<action name="Execute">
				<command>rofi -modi drun,run -show drun -icon-theme 'Papirus-Dark' -show-icons</command>
			</action>
		</keybind>

		<!-- File Explorer -->
		<keybind key="W-e"> <action name="Execute"> <command>pcmanfm</command> </action> </keybind>

		<!-- Terminal -->
		<keybind key="W-Return"> <action name="Execute"> <command>xfce4-terminal</command> </action> </keybind>

		<!-- Lockscreen -->
		<keybind key="W-l"> <action name="Execute"> <command>slock</command> </action> </keybind>

		<!-- Volume -->
		<keybind key="F8"> <action name="Execute"> <command>amixer -q sset Master 2%+ unmute</command> </action> </keybind>
		<keybind key="F7"> <action name="Execute"> <command>amixer -q sset Master 2%- unmute</command> </action> </keybind>

	</keyboard>


	<!-- ######################################################################### -->
	<!-- Mouse Keybind -->
	<!-- ######################################################################### -->
	<mouse>
		<dragThreshold>1</dragThreshold>
		<doubleClickTime>500</doubleClickTime>
		<screenEdgeWarpTime>400</screenEdgeWarpTime>
		<screenEdgeWarpMouse>false</screenEdgeWarpMouse>

		<context name="Frame">
			<mousebind button="W-Left" action="Press">
				<action name="Focus"/> 
				<!-- <action name="Raise"/> -->
			</mousebind>

			<mousebind button="W-Left" action="Click">
				<action name="Unshade"/>
			</mousebind>

			<mousebind button="W-Left" action="Drag">
				<action name="Move"/>
			</mousebind>

			<mousebind button="W-Right" action="Press">
				<action name="Focus"/>
				<action name="Unshade"/>
				<!-- <action name="Raise"/> -->
			</mousebind>

			<mousebind button="W-Right" action="Drag">
				<action name="Resize"/>
			</mousebind>
		</context>

		<context name="Client">
			<mousebind button="Left" action="Press">
				<action name="Focus"/>
				<!-- <action name="Raise"/> -->
			</mousebind>
			<mousebind button="Middle" action="Press">
				<action name="Focus"/>
				<!-- <action name="Raise"/> -->
			</mousebind>
			<mousebind button="Right" action="Press">
				<action name="Focus"/>
				<!-- <action name="Raise"/> -->
			</mousebind>
		</context>
	</mouse>

	
	<applications>

		<application class="*">
			<decor>no</decor>
		</application>

		<application class="*terminal*">
			<maximized>true</maximized>
			<decor>no</decor>
		</application>

	<application class="*">
		<position force="no">
			<x>center</x> <y>center</y>
		</position>
	</application>
		
		<!--
		<application type="normal">
			<maximized>true</maximized>
			<decor>no</decor>
		</application>
		-->
		<application class="Polybar">
        <layer>below</layer>
    </application>
	</applications>

</openbox_config>
