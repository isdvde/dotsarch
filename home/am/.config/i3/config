#set $cBlack2 #282a36

bar {
	#colors {
	#	background #000000BF
	#}

	i3bar_command i3bar -t
	status_command exec ~/.config/i3/bar.sh
	tray_output primary
	position top
	font pango:Dejavu Sans Book 7
	#height 15
	mode hide
	hidden_state hide

	colors {
        background #272822bf
        statusline $cWhite

		#<colorclass>		<border> <background> <text>
        focused_workspace	$cYellow	$cYellow	$cBlack
        inactive_workspace	$cRose		$cBlack		$cRose
        urgent_workspace	$cRed		$cRed		$cBlack
    }
}

bindsym $mod+b bar mode toggle

