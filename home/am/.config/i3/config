set $cWhite #F8F8F2
set $cWhite2 #FFFFFF
set $cGray #75715E

# class                 border  backgr. text    indicator	child_border
client.focused          $cRed	$cRed	$cBlack $cGreen		$cRed
client.focused_inactive $cBlack	$cGray	$cBlack $cGreen		$cBlack
client.unfocused		$cGray	$cBlack	$cWhite $cGreen		$cBlack
client.urgent			$cYellow	$cYellow	$cBlack $cCyan		$cYellow
